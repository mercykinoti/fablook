<script type="text/javascript">
	function fadecontent(){
		$(".slider .my-container:first").fadeIn(1000).delay(2000).fadeOut(1000, function() {
			$(this).appendTo($(this).parent());
			fadecontent();
		});
	}
	fadecontent();
</script>
