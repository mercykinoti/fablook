<script type="text/javascript">
function slide(){
	var host = window.location.host;
	var proto = window.location.protocol;
	setTimeout(function(){
		document.getElementById('slider-image').src = proto+"//"+host+"/images/p7.jpg"
	}, 2000);
		setTimeout(function(){
		document.getElementById('slider-image').src = proto+"//"+host+"/images/p2.jpg"
	}, 4000);
		setTimeout(function(){
		document.getElementById('slider-image').src = proto+"//"+host+"/images/p3.jpg";
		slide();
	}, 6000);
}
slide();

</script>

