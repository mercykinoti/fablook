
<div class="slider"   >
	<div class="my-container" >
	<button type="button" class="btn btn-warn” aria-label="Left Align">
    <h1 id="caption"><%= link_to 'Shop top picks', products_path %></h1>
    <img src="/images/ba10.jpg" class="img-responsive" id="slider-image">
	</div>
</div>

<script type="text/javascript">
function slide(){
	var host = window.location.host;
	var proto = window.location.protocol;
	setTimeout(function(){
		document.getElementById('slider-image').src = proto+"//"+host+"/images/pic1.jpg"
	}, 2000);
		setTimeout(function(){
		document.getElementById('slider-image').src = proto+"//"+host+"/images/slider1.jpg"
	}, 4000);
		setTimeout(function(){
		document.getElementById('slider-image').src = proto+"//"+host+"/images/ba10.jpg";
		slide();
	}, 6000);
}
slide();

</script>
