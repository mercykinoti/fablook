<h1>Search</h1>

<%= form_for @search do |s|%>
  <div class="field">
    <%= s.text_field :keywords %>
  </div>
  <div class="field">
    <%= s.select :category, options_for_select(@categories), :include_blank => true %>
  </div>
  <div class="field">
    <%= s.text_field :min_price, size: 10 %>
    <%= s.text_field :max_price, size: 10 %>
  </div>
  <div class="field">
    <%= s.text_field :isbn, size: 10 %>
  </div>
  <div class="actions">
    <%= s.submit "Search", class: "btn btn-primary"%>
  </div>
<% end %>
