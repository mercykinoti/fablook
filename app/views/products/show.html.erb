<div class="container">
  <div class="row product">
    <div class="col-md-4 ">
      <div class="men-pro-item simpleCart_shelfItem">
        <div class="men-thumb-item">
          <%= image_tag @product.image_url(:thumbnail), :width => 400, :height => 400 %>
        </div>
      </div>
    </div>
    <div>
      <p>Product overview</p>
      <div class="item-info-product ">
          <h4><a href="details.html"><%= @product.name %></a></h4>
          <div class="info-product-price">
            <span class="item_price">$<%= @product.price %></span>
          </div>
      </div>
      <hr>
      <%= social_share_button_tag(@product.name, :allow_sites => %w(twitter facebook)) %>
    </div>
    <div>
      <%= link_to like_product_path(@product), method: :put do %>
          <button class=“btn” aria-label=“Left”>
            <span class=“vote”><%= @product.get_upvotes.size %></span>
          </button>
      <% end %>

      <%= link_to unlike_product_path(@product), method: :put do %>
          <button type=“button” class=“btn btn-info” aria-label=“Left Align”>

            <span class=“badge”><%= @product.get_downvotes.size %></span>
          </button>
      <% end %>
    </div>
    <hr>
    <button type="button" class="btn btn-warning” aria-label="Left Align">
      
    </button>

  </div>
</div>


