<div class="container-fluid products">
  <h1>Categories</h1>
  <p>Shop by category</p>
  <hr>
  <div class="row">
    <div class="col-md-3">
    <p>Category</p>
        <ul class="list-unstyled">
          <li><a href="fablook.com">Beauty</a></li>
          <li><a href="fablook.com">Shoes</a></li>
          <li><a href="fablook.com">Beauty</a></li>
          <li><a href="fablook.com">Accessories</a></li>
        </ul>
    <hr>     
    <p>Price</p>
    <select>
      <option value="">16-20</option>
      <option value="">21-25</option>
      <option value="">Above 30</option>
      <option value="" selected>26-30</option>
    </select> 
    <hr>
    <p>Sorted by</p>
    <select>
      <option value="">16-20</option>
      <option value="">21-25</option>
      <option value="">Above 30</option>
      <option value="" selected>26-30</option>
    </select>
    <hr>
                   
    </div>
    <div class="col-md-9">
     <% @products.in_groups_of(4, false) do |group| %>

       <% group.each do |product| %>
      <div class="row">       
        <div class="col-md-3">
        <div class="card demo-card" style="width: 20rem; ">
        <%= image_tag product.image_url(:thumbnail), class: "card-img-top img-size" %>
        <div class="card-block">
         <p><a ><%= product.name %> </a></p>
         <p class="item_price">$<%= product.price %></p>
         <%= link_to 'View Details', product_path(product) , class: "btn btn-default" %></div>
      </div>       
        </div>

      <% end %>

      </div>

    <% end %>

    </div>
    
  </div>
</div>

