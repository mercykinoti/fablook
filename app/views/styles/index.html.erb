                <div class="col-md-4">
                  <div>
                    <input type="checkbox" name="style" id="style4" >
                    <label for="style4">
                      <%= image_tag(image_url('casual.jpg'))%>

                    </label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div>
                    <input type="checkbox" name="style" id="style5" >
                    <label for="style5">
                      <%= image_tag(image_url('brand.jpg'))%>
                    </label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div>
                    <input type="checkbox" name="style" id="style6" >
                    <label for="style6">
                      <%= image_tag(image_url('afric.jpg'))%>
